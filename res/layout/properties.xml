<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">

	<!-- name of str -->
	<LinearLayout android:id="@+id/LinearLayout02"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/space"
			android:layout_height="fill_parent" android:layout_width="wrap_content"
			android:gravity="center_vertical">
			<TextView android:text="@string/str_name_tv" android:id="@+id/str_name_tv"
				 android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>s

		<LinearLayout android:id="@+id/space"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="right">
			<EditText android:text="lelouras" android:id="@+id/str_name_et"
				android:inputType="textPersonName"  android:layout_marginLeft="7dip"
				android:layout_height="wrap_content" android:layout_width="150dip"></EditText>
		</LinearLayout>
	</LinearLayout>

	<!-- imera eisagogis -->

	<LinearLayout android:id="@+id/LinearLayout03"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/space"
			android:layout_height="fill_parent" android:layout_width="wrap_content"
			android:gravity="center_vertical">
			<TextView android:text="@string/str_indate_tv" android:id="@+id/str_indate_tv"
				 android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		<LinearLayout android:id="@+id/space"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="right">

			<EditText android:text="" android:id="@+id/str_indate_et"
				android:focusable="false" 
				android:layout_width="150dip" android:layout_height="wrap_content"
				android:inputType="date"></EditText>
		</LinearLayout>
	</LinearLayout>

	<!-- imera apolisis -->

	<LinearLayout android:id="@+id/LinearLayout04"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/space"
			android:layout_height="fill_parent" android:layout_width="wrap_content"
			android:gravity="center_vertical">
			<TextView android:text="@string/str_outdate_tv" android:id="@+id/str_outdate_tv"
				 android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>

		<LinearLayout android:id="@+id/space"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="right">
			<EditText android:text="" android:id="@+id/str_outdate_et"
				android:focusable="false" 
				android:layout_width="150dip" android:inputType="date"
				android:layout_alignParentRight="true" android:layout_height="wrap_content"></EditText>
		</LinearLayout>
	</LinearLayout>

	<!-- imeres adeias -->

	<LinearLayout android:id="@+id/LinearLayout05"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/space"
			android:layout_height="fill_parent" android:layout_width="wrap_content"
			android:gravity="center_vertical">
			<TextView android:text="@string/str_adeia_tv" android:id="@+id/str_adeia_tv"
				 android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>

		<LinearLayout android:id="@+id/space"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="right">
			<EditText android:text="32" android:id="@+id/str_adeia_et"
				 android:layout_width="150dip"
				android:numeric="integer" android:inputType="number"
				android:layout_alignParentRight="true" android:layout_height="wrap_content"></EditText>
		</LinearLayout>
	</LinearLayout>
	
		<!-- imeres filakis -->

	<LinearLayout android:id="@+id/LinearLayout05"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/space"
			android:layout_height="fill_parent" android:layout_width="wrap_content"
			android:gravity="center_vertical">
			<TextView android:text="@string/str_filaki_tv" android:id="@+id/str_filaki_tv"
				 android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>

		<LinearLayout android:id="@+id/space"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="right">
			<EditText android:text="0" android:id="@+id/str_filaki_et"
				 android:layout_width="150dip"
				android:numeric="integer" android:inputType="number"
				android:layout_alignParentRight="true" android:layout_height="wrap_content"></EditText>
		</LinearLayout>
	</LinearLayout>

	<!-- oplo -->


	<LinearLayout android:id="@+id/LinearLayout05"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/space"
			android:layout_height="fill_parent" android:layout_width="wrap_content"
			android:gravity="center_vertical">
			<TextView android:text="@string/str_oplo_tv" android:id="@+id/str_oplo_tv"
				 android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
		</LinearLayout>

		<LinearLayout android:id="@+id/space"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="right">
			<Spinner android:id="@+id/oploSpinner" android:layout_height="wrap_content"
				android:prompt="@string/oploSpinner"
				 android:layout_width="150dip"
				android:layout_alignParentRight="true"></Spinner>

		</LinearLayout>
	</LinearLayout>


	<!-- koumpia -->

	<LinearLayout android:id="@+id/LinearLayout06" android:gravity="center_horizontal"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<Button android:text="@string/ok_but" android:id="@+id/ok_button"
				android:onClick="okButtonClicked" android:layout_width="100dip"
				android:layout_height="wrap_content"></Button>
			<Button android:text="@string/cancel_but" android:id="@+id/cancel_button"
				android:onClick="cancelButtonClicked" android:layout_width="100dip"
				android:layout_height="wrap_content"></Button>
	</LinearLayout>
</LinearLayout>
